@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h2>Customers</h2>
</section>
<div>
    @Html.ActionLink("New","New","Customers",null, new { @class="btn btn-primary pull-right" })
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th> 
            <th>Name</th> 
            <th>Membership Type</th>
            <th></th>
        </tr>
    </thead> 
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.MembershipType.Name</td>
                <td>@Html.ActionLink("View","Edit",new {id = customer.Id},"")</td>
            </tr>
        }
    </tbody>
</table>

