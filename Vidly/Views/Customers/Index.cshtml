@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th> 
            <th>Name</th> 
            <th></th>
        </tr>
    </thead> 
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@Html.ActionLink("View","Details",new {id = customer.Id},"")</td>
            </tr>
        }
    </tbody>
</table>

