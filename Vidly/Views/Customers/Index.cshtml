@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h2>Customers</h2>
</section>
<div>
    @Html.ActionLink("New","New","Customers",null, new { @class="btn btn-primary pull-right" })
</div>
<table id="customers" class="table table-hover">
    <thead>
        <tr>
            <th>#</th> 
            <th>Name</th> 
            <th>Membership Type</th>
            <th></th>
            <th></th>
        </tr>
    </thead> 
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.MembershipType.Name</td>
                <td>@Html.ActionLink("View","Edit",new {id = customer.Id}, new { @class = "btn btn-link pull-right" })</td>
                <td><button data-customer-id="@customer.Id" class="btn btn-link js-delete">Delete</button></td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this customer", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
    </script>    
}

