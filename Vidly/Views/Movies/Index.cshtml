@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<table class="table table-hover">
    <thead>
    <tr>
        <th>#</th> 
        <th>Name</th> 
        <th></th>
    </tr>
    </thead> 
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Id</td>
            <td>@movie.Name</td>
            <td>@Html.ActionLink("Edit","Details",new {id = movie.Id},"")</td>
        </tr>
    }
    </tbody>
</table>
