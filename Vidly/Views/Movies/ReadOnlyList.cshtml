@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <h2>Movies</h2>
</section>
<table  id="movies" class="table table-hover">
    <thead>
    <tr>
        <th>Movie</th> 
        <th>Genre</th> 
    </tr>
    </thead> 
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () { 
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    }
                ] 
            });
        });

    </script>    
}